@model IEnumerable<CRUD.APP.ViewModels.ProdutoViewModel>

<table class="table table-hover table-responsive-xl table-responsive-lg table-responsive-md table-responsive-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/imagens/@item.Imagem" alt="Imagem de produto" class="img-produto">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                </td>
                <td>
                    @item.Valor.ToString("C")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Produtos" asp-route-id="@item.Id" class="btn btn-warning"> <span class="fa fa-pen-alt"></span> </a>
                    <a asp-action="Details" asp-controller="Produtos" asp-route-id="@item.Id" class="btn btn-info"> <span class="fa fa-search"></span> </a>
                    <a asp-action="Delete" asp-controller="Produtos" asp-route-id="@item.Id" class="btn btn-danger"> <span class="fa fa-trash"></span> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
