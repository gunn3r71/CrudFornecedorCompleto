@model CRUD.APP.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar: " + Model.Nome;
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class=""></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="">Fornecedor: @Model.Fornecedor.Nome</label>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class=""></label>
                <textarea cols="40" rows="5" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Imagem Atual</label> <br />
                <img src="~/imagens/@Model.Imagem" alt="Imagem" class="img-produto-edit"/>
            </div>
            
            <div class="form-group">
                <label asp-for="ImagemUpload">Atualizar Imagem</label>
                
                <div class="custom-file">
                    <input type="file" class="custom-file-input form-control-file" id="ImagemUpload" asp-for="ImagemUpload" />
                    <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                    <label style="display: none" id="img_nome"></label>
                </div>  
            </div>
            <div class="form-group">
                <label asp-for="Valor" class=""></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a onclick="back()" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/image_validation.js"></script>
}
