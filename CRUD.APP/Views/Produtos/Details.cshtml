@model CRUD.APP.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = $"Detalhes: {Model.Nome}";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <div class="row">
        <div class="col col-md-4">
            <img src="~/imagens/@Model.Imagem" alt="Imagem de produto" class="img-produto-view" />
        </div>
        <div class="col col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    <p>
                        @Html.DisplayFor(model => model.Descricao)
                    </p>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Valor)
                </dt>
                <dd class="col-sm-10">
                    @Model.Valor.ToString("C")
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
            </dl>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> 
                <a onclick="back()" class="btn btn-info">Voltar</a>
            </div>
        </div>

    </div>
</div>
