@using CRUD.APP.Extensions
@model CRUD.APP.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = $"Detalhes: {Model.Nome}";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @this.DocumentHandler(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFornecedor)
        </dt>
        <dd class="col-sm-10">
            @this.ProviderTypeHandler(Model.TipoFornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <partial name="_EnderecoDetails"/>
    
    <hr />
    <h4>Produtos</h4>
    <partial name="_ListagemProdutos" model="@Model.Produtos"/>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a> 
        <a onclick="back()" class="btn btn-info">Voltar</a>
    </div>
    
</div>