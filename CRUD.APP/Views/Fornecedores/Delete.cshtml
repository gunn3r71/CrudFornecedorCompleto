@using CRUD.APP.Extensions
@model CRUD.APP.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = $"Deletar: {Model.Nome}";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja deletar?</h3>
<div>
    <h4>Fornecedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Documento)
        </dt>
        <dd class = "col-sm-10">
            @this.DocumentHandler(Model.TipoFornecedor, Model.Documento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoFornecedor)
        </dt>
        <dd class="col-sm-10">
            @this.ProviderTypeHandler(Model.TipoFornecedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <partial name="_EnderecoDetails"/>
    
    <hr />
    <h4>Produtos</h4>
    <partial name="_ListagemProdutos" model="@Model.Produtos"/>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a onclick="back()" class="btn btn-info">Voltar</a>
    </form>
</div>
