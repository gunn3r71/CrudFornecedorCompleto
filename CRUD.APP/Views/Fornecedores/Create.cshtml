@model CRUD.APP.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Novo fornecedor";
}

<h1>@ViewData[" Title"]</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class=""></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class=""></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoFornecedor" class=""></label>
                <select asp-for="TipoFornecedor" class="form-control">
                    <option value="1" selected="selected">Pessoa Fisica</option>
                    <option value="2">Pessoa Juridica</option>
                </select>
                <span asp-validation-for="TipoFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <h4>Endereço</h4>
            <hr />
            <partial name="_Endereco"/>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary"/> 
                <button asp-action="Index" class="btn btn-info">Voltar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
